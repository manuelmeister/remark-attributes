{
  "include": ["test/**/*.ts", "util/**/*.ts", "*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./typings",
      "node_modules/@types"
    ],
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
