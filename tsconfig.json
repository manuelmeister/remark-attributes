{
  "include": ["test/**/*.ts", "util/**/*.ts", "*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "declaration": true,
    "paths": {
      "md-attr-parser": ["./typings/md-attr-parser.d.ts"]
    },
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
