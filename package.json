{
  "name": "remark-attributes",
  "version": "0.2.5",
  "description": "remark plugin to support attributes like markdown-it-attrs",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "generic",
    "directive",
    "attribute",
    "attrs"
  ],
  "repository": "manuelmeister/remark-attributes",
  "bugs": "https://github.com/manuelmeister/remark-attributes/issues",
  "author": "Manuel Meister <news.manuelsworld@gmail.com> (https://meister.id)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "files": [
    "/dist/util/*",
    "/dist/packages/**/*",
    "/dist/index.js",
    "/dist/index.d.ts"
  ],
  "dependencies": {
    "@types/mdast": "^3.0.0",
    "md-attr-parser": "^1.3.0",
    "mdast-util-directive": "^2.0.0",
    "mdast-util-from-markdown": "^1.3.0",
    "micromark-extension-directive": "^2.0.0",
    "unified": "^10.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@mdx-js/mdx": "^2.3.0",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@types/tape": "^4.0.0",
    "c8": "^7.0.0",
    "is-hidden": "^2.0.0",
    "micromark-util-symbol": "^1.1.0",
    "micromark-util-types": "^1.1.0",
    "prettier": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.0",
    "remark-cli": "^10.0.0",
    "remark-gfm": "^3.0.1",
    "remark-rehype": "^10.1.0",
    "rimraf": "^3.0.0",
    "tape": "^5.0.0",
    "to-vfile": "^7.0.0",
    "ts-node": "latest",
    "type-coverage": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "build": "rimraf \"test/**/*.d.ts\" \"*.d.ts\" && tsc && type-coverage",
    "prepublish": "rimraf \"dist/**/*\" && tsc --project tsconfig.json",
    "format": "prettier . -w --log-level warn",
    "test-api": "ts-node test/index",
    "test-coverage": "c8 --check-coverage --branches 95 --functions 100 --lines 100 --statements 100 --reporter lcov npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "typeCoverage": {
    "atLeast": 90,
    "detail": true,
    "strict": true,
    "ignoreCatch": true
  }
}
